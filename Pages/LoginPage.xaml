<Page x:Class="FireTestingApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireTestingApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <Label Content="АВТОРИЗАЦИЯ" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label Content="Логин:" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_Login" HorizontalAlignment="Center" Margin="0,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="31" FontSize="18"/>
        <Label Content="Пароль:" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="TB_Password" HorizontalAlignment="Center" Margin="0,281,0,0" VerticalAlignment="Top" Width="244" Height="31" FontSize="18"/>
        <Button x:Name="EnterButton" Content="ВОЙТИ" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Width="244" Height="40" Click="EnterButton_Click"/>
        <Rectangle HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="80">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/auto-891-1.png" TileMode="None" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="79" Width="610" FontSize="20" FontWeight="Bold" TextAlignment="Center"><Run Language="ru-ru" Text="КОМПЬЮТЕРНАЯ СИТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ"/><LineBreak/><Run Language="ru-ru" Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ"/></TextBlock>

    </Grid>
</Page>
