<Page x:Class="FireTestingApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireTestingApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="670" d:DesignWidth="1087"
      Title="LoginPage">

    <Grid Background="White">
        <Label HorizontalContentAlignment="Center" Content="АВТОРИЗАЦИЯ" HorizontalAlignment="Center" Margin="0,239,0,0" FontSize="24" FontWeight="Bold" VerticalAlignment="Top" Width="244"/>
        <Label Content="Логин:" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TB_Login" HorizontalAlignment="Center" Margin="0,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="31" FontSize="18"/>
        <Label Content="Пароль:" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="TB_Password" HorizontalAlignment="Center" Margin="0,416,0,0" VerticalAlignment="Top" Width="244" Height="31" FontSize="18"/>
        <Button x:Name="EnterButton" Content="ВОЙТИ" HorizontalAlignment="Center" Margin="0,485,0,0" VerticalAlignment="Top" Width="244" Height="52" Click="EnterButton_Click"/>
        <Rectangle HorizontalAlignment="Center" Height="80" Margin="0,154,0,0" Width="80" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/auto-891-1.png" TileMode="None" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" Width="610" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" Height="105"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ"/><LineBreak/><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ"/></TextBlock>

    </Grid>
</Page>
