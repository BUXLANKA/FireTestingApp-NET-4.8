<Page x:Class="FireTestingApp.Pages.MainTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireTestingApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainTestPage">

    <Grid Background="White">
        <TextBlock x:Name="QuestionTB" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="215" Width="780"/>
        <RadioButton x:Name="Option1" Content="RadioButton" HorizontalAlignment="Left" Margin="32,301,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Option2" Content="RadioButton" HorizontalAlignment="Left" Margin="32,321,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Option3" Content="RadioButton" HorizontalAlignment="Left" Margin="32,341,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Option4" Content="RadioButton" HorizontalAlignment="Left" Margin="32,361,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Option5" Content="RadioButton" HorizontalAlignment="Left" Margin="32,381,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
